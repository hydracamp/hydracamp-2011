<!DOCTYPE html>
<html>
<head>
  <title>Hydracamp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>



<div class="content clearfix">
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>

<div class="user_actions">
  <% if current_zombie.nil? %>
    <%= link_to "log in", new_zombie_session_path%>
  <% else %>
    Welcome <%= current_zombie.name %>
    <%= link_to "edit account", edit_zombie_registration_path%>
    <%= link_to "log out", destroy_zombie_session_path, :method=>:delete %>
  <% end %>
</div>
<%= yield %>

</body>
</html>
