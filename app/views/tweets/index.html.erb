<h1>Tweets</h1>

<% if current_zombie != @zombie %>
  <%= render :partial => "new" %>
<% end %>

<h2>Everyone's Tweets</h2>

<%= paginate @tweets %>
<ul>
  <% @tweets.each do |tweet|%>
    <li>
      <%= link_to tweet.zombie.name, zombie_path(tweet.zombie) %>
      <%= tweet.status%>
      <%= tweet.created_at %>
    </li>
  <% end%>  
</ul>
<%= paginate @tweets %>
